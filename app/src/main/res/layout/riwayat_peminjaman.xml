<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_riwayat"
        android:background="#fff"
        >
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_judulBuku"
                    android:text="Judul Buku"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/tv_noBuku"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nomor Buku"
                    android:textSize="5pt"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/niv_gambar"
                    android:layout_width="70dp"
                    android:layout_height="100dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_tgl_pinjam"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Pinjam: 00/00/0000"
                        android:textSize="5pt"/>
                    <TextView
                        android:id="@+id/tv_tgl_kembali"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Kembali: 00/00/0000"
                        android:textSize="5pt"/>
                    <TextView
                        android:id="@+id/tv_denda"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Denda: Rp.0000000"
                        android:textSize="5pt"/>
                    <TextView
                        android:id="@+id/tv_keterangan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="5pt"
                        android:text="keterangan"
                        android:visibility="gone"
                        />
                    <Button
                        android:id="@+id/btn_selesai"
                        android:text="Selesai"
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>